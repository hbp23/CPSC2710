<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.au.cpsc.module4.controller.FlightScheduleController">
    <center>
        <fx:include fx:id="scheduledFlightTableView" source="../view/flightSchedule-table-view.fxml" />
    </center>
    <bottom>
        <HBox maxWidth="1.7976931348623157E308" spacing="35.0" BorderPane.alignment="CENTER">
            <fx:include fx:id="scheduleFlightDetailView" source="../view/flightSchedule-detail-view.fxml" HBox.hgrow="ALWAYS" />
            <fx:include fx:id="scheduleFlightDetailButtonView" source="../view/flightSchedule-detailButtons-view.fxml" />
            <VBox prefHeight="126.0" prefWidth="72.0" spacing="10.0">
                <children>
                    <Button fx:id="updateButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#updateButtonAction" text="Update" />
                    <Button fx:id="newButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#newButtonAction" text="New" />
                    <Button fx:id="deleteButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#deleteButtonAction" text="Delete" />
                </children>
                <HBox.margin>
                    <Insets bottom="5.0" top="10.0" />
                </HBox.margin>
            </VBox>
            <BorderPane.margin>
                <Insets left="5.0" right="5.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#closeMenuAction" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem fx:id="updateMenuItem" mnemonicParsing="false" onAction="#updateMenuAction" text="Update" />
                  <MenuItem mnemonicParsing="false" onAction="#newMenuAction" text="New" />
                  <MenuItem mnemonicParsing="false" onAction="#deleteMenuAction" text="Delete" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
