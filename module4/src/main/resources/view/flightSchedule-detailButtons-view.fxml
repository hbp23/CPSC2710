<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="detailButtons" prefHeight="145.0" prefWidth="113.0" spacing="2.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.au.cpsc.module4.controller.FlightScheduleDetailViewController">
        <children>
            <Label prefHeight="17.0" prefWidth="86.0" text="Days of Week" textAlignment="CENTER" underline="true" />
            <HBox prefHeight="100.0" prefWidth="200.0">
                <children>
                    <VBox spacing="3.0">
                        <children>
                            <ToggleButton fx:id="mondayButton" mnemonicParsing="false" prefWidth="47.0" text="Mon" />
                            <ToggleButton fx:id="TuesdayButton" mnemonicParsing="false" prefWidth="47.0" text="Tue" />
                            <ToggleButton fx:id="wednesdayButton" mnemonicParsing="false" prefWidth="47.0" text="Wed" />
                            <ToggleButton fx:id="thursdayButton" mnemonicParsing="false" prefWidth="47.0" text="Thu" />
                        </children>
                    </VBox>
                    <VBox prefHeight="104.0" prefWidth="60.0" spacing="3.0">
                        <children>
                            <ToggleButton fx:id="fridayButton" mnemonicParsing="false" prefWidth="43.0" text="Fri" />
                            <ToggleButton fx:id="saturdayButton" mnemonicParsing="false" prefWidth="43.0" text="Sat" />
                            <ToggleButton fx:id="sundayButton" mnemonicParsing="false" prefWidth="43.0" text="Sun" />
                        </children>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </VBox>
                </children>
            </HBox>
        </children>
</VBox>
